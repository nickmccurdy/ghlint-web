extends layout

block content
  .page-header
    h1
      a(href='/') ghlint
      | 
      small A linter for GitHub projects.
  form(action='/', role='form')
    .form-group
      label(for='repo') Repository
      .input-group
        input#repo.form-control(name='repo', placeholder='user/repository', autofocus)
        span.input-group-btn
          input.btn.btn-primary(type='submit', value='Lint')
  if results
    h2 Results
    table.table
      thead
        tr
          th Linter
          th Status
      tbody
        for result in results
          tr
            td= result.message
            td= result.result
  script(src='http://codepen.io/assets/libs/fullpage/jquery.js')
  script(src='http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js')
