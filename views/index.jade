extends layout

block content
  .page-header
    h1
      a(href='/') ghlint
      | 
      small A linter for GitHub projects.
  form(action='/', role='form')
    .form-group
      label(for='repo') Repository
      .input-group
        input#repo.form-control(name='repo', placeholder='user/repository', autofocus)
        span.input-group-btn
          input.btn.btn-primary(type='submit', value='Lint')
  if repos
    for repo in repos
      .panel.panel-default
        .panel-heading
          h3.panel-title= repo.name
        table.table.table-bordered
          thead
            tr
              th Linter
              th Status
          tbody
            for result in repo.results
              tr(class=(result.result ? 'success' : 'danger'))
                td= result.message
                td= result.result
